.navbar.navbar-fixed-top.navbar-main
  .navbar-inner
    .container-fluid
      a.brand(href="/r/") #{ name }
        img(src="/r/images/chew-svg.svg")
      .pull-right
        ul.nav
          li(class="#{ current.source=='faq'?'active':'' }"): a(href="/r/faq") FAQ
          li(class="#{ current.source=='support'?'active':'' }"): a(href="/r/support") Support